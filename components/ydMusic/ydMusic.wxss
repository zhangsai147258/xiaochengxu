.player {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 8rpx;
  z-index: 2;
}

.time {
  font-size: 24rpx;
  position: absolute;
  bottom: 14rpx;
  right: 10rpx;
  color: rgba(255, 255, 255, .6);
}

.progress {
  background: rgba(242,90,78,.3);
  position: relative;
  height: 100%;
}
.progress-bar {
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  background: #f25a4e;
}

.player-controller image {
  width: 160rpx;
  height: 160rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate3d(-50%, -50%, 0);
}